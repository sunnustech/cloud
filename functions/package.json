{
  "name": "functions",
  "scripts": {
    "lint": "prettier --write ./src/**/*.ts && eslint --fix --ext .js,.ts .",
    "build": "tsc",
    "serve:old": "yarn build && firebase emulators:start --only functions",
    "serve": "tsc -w | firebase emulators:start --only functions",
    "serve:fresh": "rm -rf ./lib && tsc && tsc -w | firebase emulators:start --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "prettier": "prettier --write ./src/**/*.ts"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0",
    "firebase-tools": "^10.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^0.2.0",
    "prettier": "^2.6.2",
    "typescript": "^4.5.4"
  },
  "private": true,
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  }
}
